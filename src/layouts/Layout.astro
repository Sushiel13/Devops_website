---
import Navigation from '../components/Navigation.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="DevOps Training Academy - Learn DevOps from experts" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | devops-partner.cloud</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap">
  </head>
  <body class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900">
    <div class="cyber-grid"></div>
    <div class="floating-objects">
      <div class="floating-object cube"></div>
      <div class="floating-object sphere"></div>
      <div class="floating-object pyramid"></div>
    </div>
    <Navigation />
    <slot />
    <WhatsAppButton />
    <footer class="bg-gray-900/80 backdrop-blur-md text-white py-8 mt-12 border-t border-cyan-500/20">
      <div class="max-w-7xl mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <h3 class="text-2xl font-bold mb-4 bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">Contact Us</h3>
            <p class="mb-2">Website: <a href="https://devops-partner.cloud" class="text-cyan-400 hover:text-cyan-300">devops-partner.cloud</a></p>
          </div>
          <div>
            <h3 class="text-2xl font-bold mb-4 bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">Quick Links</h3>
            <ul class="space-y-2">
              <li><a href="/syllabus" class="text-gray-300 hover:text-cyan-400">Syllabus</a></li>
              <li><a href="/books" class="text-gray-300 hover:text-cyan-400">Books</a></li>
              <li><a href="/labs" class="text-gray-300 hover:text-cyan-400">Labs</a></li>
            </ul>
          </div>
        </div>
        <div class="text-center mt-8 pt-8 border-t border-gray-800">
          <p>&copy; 2024 devops-partner.cloud. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    --accent: 56, 189, 248;
    --accent-light: 14, 165, 233;
    --accent-dark: 2, 132, 199;
  }
  
  html {
    font-family: 'Space Grotesk', system-ui, sans-serif;
    background: #000;
    scroll-behavior: smooth;
  }

  .cyber-grid {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      linear-gradient(to right, rgba(56, 189, 248, 0.1) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(56, 189, 248, 0.1) 1px, transparent 1px);
    background-size: 50px 50px;
    pointer-events: none;
    z-index: 0;
  }

  .floating-objects {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
  }

  .floating-object {
    position: absolute;
    opacity: 0.15;
    filter: blur(1px);
    animation: float 20s infinite linear;
  }

  .cube {
    width: 100px;
    height: 100px;
    background: linear-gradient(45deg, rgba(56, 189, 248, 0.8), rgba(14, 165, 233, 0.8));
    top: 20%;
    left: 10%;
    animation-delay: -5s;
    transform-style: preserve-3d;
    animation: float 15s infinite linear, rotate3d 20s infinite linear;
  }

  .sphere {
    width: 80px;
    height: 80px;
    background: linear-gradient(45deg, rgba(56, 189, 248, 0.8), rgba(2, 132, 199, 0.8));
    border-radius: 50%;
    top: 60%;
    right: 15%;
    animation-delay: -10s;
  }

  .pyramid {
    width: 0;
    height: 0;
    border-left: 50px solid transparent;
    border-right: 50px solid transparent;
    border-bottom: 86.6px solid rgba(56, 189, 248, 0.3);
    top: 30%;
    right: 30%;
    animation-delay: -15s;
  }

  @keyframes float {
    0% {
      transform: translate(0, 0) rotate(0deg);
    }
    33% {
      transform: translate(30px, -50px) rotate(120deg);
    }
    66% {
      transform: translate(-30px, 50px) rotate(240deg);
    }
    100% {
      transform: translate(0, 0) rotate(360deg);
    }
  }

  @keyframes rotate3d {
    0% {
      transform: rotateX(0deg) rotateY(0deg) rotateZ(0deg);
    }
    100% {
      transform: rotateX(360deg) rotateY(360deg) rotateZ(360deg);
    }
  }

  main {
    position: relative;
    z-index: 1;
  }
</style>