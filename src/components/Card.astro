---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<div class="card-3d">
	<a href={href} class="block p-6 bg-gray-900/80 backdrop-blur-sm rounded-lg border border-indigo-500/20 hover:border-indigo-500/40 transition-all duration-300">
		<h2 class="text-xl font-bold mb-2 bg-gradient-to-r from-white to-indigo-200 bg-clip-text text-transparent">
			{title}
			<span class="inline-block ml-2 transform group-hover:translate-x-1 transition-transform">&rarr;</span>
		</h2>
		<p class="text-gray-300">
			{body}
		</p>
	</a>
</div>

<style>
	.card-3d {
		position: relative;
	}

	.card-3d::after {
		content: '';
		position: absolute;
		inset: -1px;
		background: linear-gradient(
			45deg,
			rgba(124, 58, 237, 0.1),
			rgba(124, 58, 237, 0.2)
		);
		filter: blur(15px);
		z-index: -1;
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.card-3d:hover::after {
		opacity: 1;
	}
</style>